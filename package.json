{
  "name": "nora-node-engine",
  "version": "0.0.1",
  "description": "A codemod engine for Node.js libraries (e.g. jscodeshift, TSC utilities)",
  "main": "src/index.ts",
  "scripts": {
    "build": "ncc build ./src/index.ts -m -o build",
    "lint:eslint": "eslint src --fix --ext ts",
    "lint:prettier": "prettier --write src",
    "package": "pkg .",
    "test": "mocha"
  },
  "bin": "./build/index.js",
  "pkg": {
    "scripts": "./build/**/*.js",
    "assets": "./assets/*.*",
    "outputPath": "./build/"
  },
  "keywords": [],
  "author": "Intuita",
  "private": true,
  "devDependencies": {
    "@types/jscodeshift": "^0.11.5",
    "@types/node": "^18.11.9",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "@vercel/ncc": "^0.34.0",
    "chai": "^4.3.7",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.1.0",
    "prettier": "^2.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "jscodeshift": "^0.14.0",
    "yargs": "^17.6.2"
  }
}
