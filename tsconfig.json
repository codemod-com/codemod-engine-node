{
	"include": ["./src", "./test"],
	"exclude": ["./dist", "./node_modules"],
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"target": "ES2015",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"allowJs": true,
		"checkJs": false
	}
}
