{
	"include": ["./src"],
	"exclude": ["./dist", "./build", "./node_modules"],
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"target": "ES2018",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"allowJs": true,
		"checkJs": false,
	}
}
